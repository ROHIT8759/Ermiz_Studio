# ─────────────────────────────────────────────────────────────────────────────
# Ermiz Studio – Environment Variables
# Copy this file to .env and fill in your values.
# Never commit .env to version control.
# ─────────────────────────────────────────────────────────────────────────────

# ── Supabase ─────────────────────────────────────────────────────────────────
# Project URL (e.g. https://xxxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=

# Anon / public key (safe to expose in the browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Service role key (server-only, never expose to the browser)
SUPABASE_SERVICE_ROLE_KEY=

# ── Database (PostgreSQL via Prisma) ─────────────────────────────────────────
# Pooled connection URL (used by Prisma at runtime)
DATABASE_URL=postgresql://user:password@host:5432/dbname?pgbouncer=true&connection_limit=1

# Direct (non-pooled) connection URL (used by Prisma migrations)
DIRECT_URL=postgresql://user:password@host:5432/dbname

# ── Credits ───────────────────────────────────────────────────────────────────
# Number of free credits granted per month (default: 1000)
MONTHLY_FREE_CREDITS=1000

# Day-of-month (1–28) when monthly credits refresh (default: 1 = 1st of each month)
FREE_RESET_DAY_OF_MONTH=1
